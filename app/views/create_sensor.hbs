<link rel="stylesheet" type="text/css" href="../css/instances.css">
{{> leftrail}}
<div class="right" ng-controller="createsensorController">
  <div class="heading-section">
    <h3>Create Sensor</h3>
    <p>Create a new sensor with pre-configured type provided by app</p>
  </div>
  <div>
    <form class="form-create-instance" ng-submit="createSensors()">
      <div>
        <label for="inputEmail">Sensor Name</label>
        <input type="text" id="inputName" ng-model="formSensor.name" class="form-control" placeholder="Sensor name" required autofocus>
      </div>
      <div>
        <label for="inputDesc">Sensor Description</label>
        <input type="text" id="inputFirstName" ng-model="formSensor.desc" class="form-control" placeholder="Sensor description" required>
      </div>
      <div>
        {{> sensortype}}
      </div>
      <div>
        <div class="dropdown storage-type">
          <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">Select storage
          <span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><a onClick="handleStorage('2G')">2G</a></li>
            <li><a onClick="handleStorage('4G')">4G</a></li>
            <li><a onClick="handleStorage('8G')">8G</a></li>
            <li><a onClick="handleStorage('16G')">16G</a></li>
          </ul>
        </div>
      </div>
      <button type="submit" class="btn btn-primary submit-form">Create Sensor</button>
    </form>
  </div>
</div>
<script src="../js/controllers/create_sensor.js"></script>
